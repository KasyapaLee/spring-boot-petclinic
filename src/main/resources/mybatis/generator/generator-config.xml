<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>


    <context id="MySqlContext" targetRuntime="MyBatis3" defaultModelType="flat">

        <property name="javaFileEncoding" value="UTF-8"/>

        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--生成注释, 这里可以自定义自己的注释生成器 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <!--使用自定义的注释生成器-->
        <!--<commentGenerator type="com.dobby.mybatis.generator.MyCommentGenerator">-->
            <!--<property name="suppressAllComments" value="false"/>-->
            <!--<property name="suppressDate" value="true"/>-->
            <!--<property name="addRemarkComments" value="true"/>-->
        <!--</commentGenerator>-->


        <!--<javaTypeResolver >-->
            <!--<property name="forceBigDecimals" value="false" />-->
        <!--</javaTypeResolver>-->

        <!--jdbc 连接-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/petclinic"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <!--实体类生成路径-->
        <javaModelGenerator targetPackage="com.dobby.petclinic.domain" targetProject="src/main/java">
            <property name="trimStrings" value="true" />
            <property name="enableSubPackages" value="true"/>
        </javaModelGenerator>

        <!--mapper xml 映射文件生成路径-->
        <sqlMapGenerator targetPackage="mybatis/mapper"  targetProject="src/main/resources"/>

        <!--mapper 接口生成路径-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.dobby.petclinic.mapper" targetProject="src/main/java"/>


        <!--根据表生成-->
        <table tableName="pets" domainObjectName="Pet"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>
        <table tableName="types" domainObjectName="PetType"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>
        <table tableName="owners" domainObjectName="Owner"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>
        <table tableName="visits" domainObjectName="Visit"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>
        <table tableName="vets" domainObjectName="Vet"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>
        <table tableName="specialties" domainObjectName="Specialty"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>


    </context>
</generatorConfiguration>
